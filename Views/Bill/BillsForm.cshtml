@model coffee_shop.Models.BillModel
@{
    ViewData["Title"] = "Bill Form";
}

<h1>Bill Form</h1><br />
<form asp-controller="Bill" asp-action="BillList" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3">
        <label for="BillNumber" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Bill Number</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="BillNumber" />
            <span asp-validation-for="BillNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="BillDate" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Bill Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="BillDate" />
            <span asp-validation-for="BillDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="OrderID" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Order ID</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="OrderID"
                asp-items="@(new SelectList(ViewBag.Orders, "OrderID", "OrderNumber"))">
                <option value="">Select OrderNumber</option>
            </select>
            <span asp-validation-for="OrderID" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="TotalAmount" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Total Amount</label>
        <div class="col-sm-10">
            <input type="number" step="0.01" class="form-control" asp-for="TotalAmount" />
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="Discount" class="col-sm-2 col-form-label">Discount</label>
        <div class="col-sm-10">
            <input type="number" step="0.01" class="form-control" asp-for="Discount" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="NetAmount" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Net Amount</label>
        <div class="col-sm-10">
            <input type="number" step="0.01" class="form-control" asp-for="NetAmount" />
            <span asp-validation-for="NetAmount" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="UserID" class="col-sm-2 col-form-label"><span class="text-danger">*</span>User ID</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="UserID"
                asp-items="@(new SelectList(ViewBag.Users, "UserID", "UserName"))">
                <option value="">Select User</option>
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Bill" asp-action="BillList" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}